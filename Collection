    let collectionData = {};

    function populateTable() {
      const tbody = document.querySelector("#moneyTable tbody");
      tbody.innerHTML = "";
      const storedData = localStorage.getItem("collectionData");
      collectionData = storedData ? JSON.parse(storedData) : {};

      students.forEach((student, index) => {
        const row = tbody.insertRow();
        row.insertCell(0).textContent = index + 1;
        row.insertCell(1).textContent = student.id;
        row.insertCell(2).textContent = student.name;

        const amountCell = row.insertCell(3);
        const amountInput = document.createElement("input");
        amountInput.type = "number";
        amountInput.min = "0";
        amountInput.value = collectionData[student.id] || "";
        amountInput.classList.add("bold-value");
        amountInput.style.textAlign = "center";

        if (collectionData[student.id] > 0) {
          row.classList.add("paid");
        }

        amountInput.addEventListener("input", function () {
          const value = Number(amountInput.value);
          collectionData[student.id] = value;
          if (value > 0) {
            row.classList.add("paid");
          } else {
            row.classList.remove("paid");
          }
          localStorage.setItem("collectionData", JSON.stringify(collectionData));
          updateSummary();
        });

        amountCell.appendChild(amountInput);
      });
      updateSummary();
    }

    function updateSummary() {
      let totalCollected = 0;
      for (let key in collectionData) {
        totalCollected += collectionData[key] || 0;
      }
      const totalStudents = students.length;
      const perHead = 500;
      const expected = totalStudents * perHead;
      const remaining = expected - totalCollected;

      document.getElementById("moneySummary").textContent =
        `Total Collected: ₹${totalCollected} | Expected: ₹${expected} | Remaining: ₹${remaining}`;
    }

    function resetCollection() {
      localStorage.removeItem("collectionData");
      collectionData = {};
      populateTable();
    }

    window.onload = populateTable;
  </script>
